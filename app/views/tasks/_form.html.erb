<div class="task-form">
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :time %>

  <div class="time-select">
    <%= f.time_select :time, default: Time.current %>
  </div>

  <%= f.label :days_of_week %>
  <div class="days-of-week">
    <% Date::DAYNAMES.each do |day| %>
      <%= f.check_box :days_of_week,
        { multiple: true, checked: task.days_of_week.include?(day.downcase) },
        day.downcase,
        nil
      %>
    <%= f.label "days_of_week_#{day.downcase}", day %>
  <% end %>
</div>
</div>
