<h1 class="title">My Tasks</h1>
<% if @tasks.empty? %>
  <h2 class="subtitle"> You have no tasks! </h2>
  <%= link_to "Create a task", task_path(:new) %>
<% else %>
  <div class="box">
    <div class="content">
  <% @tasks.each do |task| %>
    <p><strong><%= task.title %></strong></p>
      <br>
      <%= task.description %>
      </br>
      <%= task.time %>
      <%= task.days_of_week %>
    <%= link_to "Edit", edit_task_path(task) %>
  <% end %>
    </div>
  </div>
  <%= link_to "Create another task", task_path(:new) %>
<% end %>
